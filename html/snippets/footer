    <script>
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const themeToggleEmoji = document.querySelectorAll('.theme-toggle-emoji');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        function setTheme(theme) {
            if (theme === 'dark') {
                document.documentElement.classList.add('dark');
                localStorage.setItem('theme', 'dark');
                themeToggleEmoji.forEach(button => button.textContent = 'ðŸŒ™');
            } else {
                document.documentElement.classList.remove('dark');
                localStorage.setItem('theme', 'light');
                themeToggleEmoji.forEach(button => button.textContent = 'â˜€ï¸');
            }
        }

        function toggleDarkMode() {
            if (document.documentElement.classList.contains('dark')) {
                setTheme('light');
            } else {
                setTheme('dark');
            }
        }

        // Apply saved theme on page load
        const savedTheme = localStorage.getItem('theme');
        const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;

        if (savedTheme) {
            setTheme(savedTheme);
        } else if (prefersDark) {
            setTheme('dark');
        } else {
            setTheme('light');
        }

        // Add event listeners to both emoji buttons
        themeToggleEmoji.forEach(button => {
            button.addEventListener('click', toggleDarkMode);
        });
    </script>